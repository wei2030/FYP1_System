@model FYP1_System___Individual.Models.AcademicProgram

@{
    ViewData["Title"] = $"Delete Program - {Model.Name}";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger text-center">Confirm Deletion</h2>

    <div class="alert alert-warning shadow-sm p-4">
        <h4 class="mb-3">Are you sure you want to delete the following academic program?</h4>

        <p>
            <strong>Program Name:</strong> @Model.Name
        </p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>
