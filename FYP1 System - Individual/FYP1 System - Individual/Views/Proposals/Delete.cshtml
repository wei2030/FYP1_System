@model FYP1_System___Individual.Models.Proposal

@{
    ViewData["Title"] = $"Delete Proposal - {Model.Title}";
}

<div class="container mt-4">
    <h2 class="text-danger text-center mb-4">@ViewData["Title"]</h2>

    <div class="alert alert-warning shadow-sm p-4">
        <h4>Are you sure you want to delete this proposal?</h4>

        <p><strong>Title:</strong> @Model.Title</p>
        <p><strong>Student:</strong> @Model.Student?.Name</p>
        <p><strong>Supervisor:</strong> @Model.Supervisor?.Name</p>
        <p><strong>Semester:</strong> @Model.Semester</p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>
