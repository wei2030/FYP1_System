@model FYP1_System___Individual.Models.Proposal
@{
    ViewData["Title"] = "Edit Proposal";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <div class="card shadow-sm p-4">
        <form asp-action="Edit2" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProjectType" class="form-label">Project Type</label>
                <input class="form-control" value="@Model.ProjectType" readonly />
                <input type="hidden" asp-for="ProjectType" />
            </div>

            <div class="mb-3">
                <label asp-for="Semester" class="form-label">Semester</label>
                <input asp-for="Semester" class="form-control" />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Session" class="form-label">Session</label>
                <input asp-for="Session" class="form-control" />
                <span asp-validation-for="Session" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FilePath" class="form-label">Proposal File Path (optional)</label>
                <input asp-for="FilePath" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="StudentId" class="form-label">Student</label>
                <select asp-for="StudentId" class="form-select" asp-items="ViewBag.Students">
                    <option value="">-- Select Student --</option>
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SupervisorId" class="form-label">Supervisor</label>
                <select asp-for="SupervisorId" class="form-select" asp-items="ViewBag.Lecturers">
                    <option value="">-- Select Supervisor --</option>
                </select>
                <span asp-validation-for="SupervisorId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-start">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-check-circle"></i> Sava Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}