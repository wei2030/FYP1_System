@{
    ViewData["Title"] = "Select Project Type";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <h2 class="text-center text-primary mb-4">@ViewData["Title"]</h2>

            <div class="card shadow border-0">
                <div class="card-body p-4">

                    <form asp-action="Create2" method="get">
                        <div class="mb-4">
                            <label for="projectType" class="form-label fw-semibold">Project Type</label>
                            <select name="projectType" id="projectType" class="form-select" required>
                                <option value="">-- Select Project Type --</option>
                                @foreach (var type in Enum.GetValues(typeof(FYP1_System___Individual.Models.DomainType)))
                                {
                                    <option value="@type">@type</option>
                                }
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-arrow-right-circle"></i> Next
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
