@model FYP1_System___Individual.Models.Lecturer

@{
    ViewData["Title"] = $"Delete Lecturer - {Model.Name}";
}

<div class="container mt-4">
    <h2 class="text-danger text-center mb-4">@ViewData["Title"]</h2>

    <div class="alert alert-warning shadow-sm p-4">
        <h5>Are you sure you want to delete the following lecturer?</h5>

        <ul class="list-group mb-3">
            <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
            <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
            <li class="list-group-item">
                <strong>Program:</strong> @(Model.Program != null ? Model.Program.Name : "Not Assigned")
            </li>
            <li class="list-group-item">
                <strong>Domain:</strong> @(Model.Domain.HasValue ? Model.Domain.ToString() : "Not Assigned")
            </li>
        </ul>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>
