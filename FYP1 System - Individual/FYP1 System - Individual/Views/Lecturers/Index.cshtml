@model List<FYP1_System___Individual.Models.Lecturer>

@{
    ViewData["Title"] = "Lecturer Management";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Lecturer
        </a>
    </div>

    <table class="table table-bordered table-hover shadow-sm align-middle">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Program</th>
                <th>Domain</th>
                <th class="text-center" style="width: 20%;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lecturer in Model)
            {
                <tr>
                    <td>@lecturer.Name</td>
                    <td>@lecturer.Email</td>
                    <td>
                        @if (lecturer.Program != null)
                        {
                            @lecturer.Program.Name
                        }
                        else
                        {
                            <span class="text-muted">Not Assigned</span>
                        }
                    </td>
                    <td>
                        @if (lecturer.Domain.HasValue)
                        {
                            @lecturer.Domain.ToString()
                        }
                        else
                        {
                            <span class="text-muted">Not Assigned</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@lecturer.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@lecturer.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
